<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HistoricoActivity"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Histórico de Partidas"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="@color/mainColor"
        android:background="@color/backgroundColor"
        android:id="@+id/txtPrincipalHistorico"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="🏆"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/mainColor"
        android:layout_marginRight="10dp"
        android:id="@+id/btnLeaderBoards"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="🔙"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/btnHistoricoVoltar"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaHistorico"
        android:layout_below="@id/txtPrincipalHistorico"/>

</RelativeLayout>